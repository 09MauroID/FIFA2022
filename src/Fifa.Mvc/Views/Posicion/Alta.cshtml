@using Fifa.Core;
@model Posicion;
@{
    ViewData["Title"] = "Alta Posicion";
}

<form asp-controller="Posicion" asp-action="AltaPosicion" method="post">
    <div asp-validation-summary="All"></div>
    <div><input type="hidden" asp-for="IdPosicion" /></div>
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="Nombre" class="col-form-label">Nombre</label>
        </div>
        <div class="col-auto">
            <input asp-for="Nombre" class="form-control" />
        </div>
    </div>
    <div class="row g-3 align-items-center">
        <button type="submit" class="btn btn-primary">Alta</button>
    </div>

</form>